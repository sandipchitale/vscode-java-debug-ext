{
  "name": "vscode-java-debug-ext",
  "displayName": "VSCode Java Debugger Extras",
  "description": "Extends the Debugger for Java extension",
  "version": "1.0.14",
  "license": "SEE LICENSE IN LICENSE",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#341114",
    "theme": "dark"
  },
  "publisher": "sandipchitale",
  "preview": true,
  "workspaceTrust": {
    "request": "onDemand",
    "description": "Extension may require your trust on workspace for code execution."
  },
  "keywords": [
    "java",
    "debug",
    "debugging",
    "debugger"
  ],
  "extensionDependencies": [
    "vscjava.vscode-java-debug"
  ],
  "engines": {
    "vscode": "^1.63.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sandipchitale/vscode-java-debug-ext.git"
  },
  "bugs": {
    "url": "https://github.com/sandipchitale/vscode-java-debug-ext/issues"
  },
  "categories": [
    "Debuggers",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:java",
    "onDebugInitialConfigurations",
    "onDebugResolve:java",
    "onCommand:vscode-java-debug-ext.showType"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-java-debug-ext.showType",
        "title": "Show Type"
      },
      {
        "command": "vscode-java-debug-ext.showTypeOfContainer",
        "title": "Show Type of Container"
      }
    ],
    "menus": {
      "debug/variables/context": [
        {
          "command": "vscode-java-debug-ext.showType",
          "when": "inDebugMode && debugType == 'java'",
          "group": "1_view@1"
        },
        {
          "command": "vscode-java-debug-ext.showTypeOfContainer",
          "when": "inDebugMode && debugType == 'java'",
          "group": "1_view@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.63.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "ts-loader": "^9.2.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  }
}
